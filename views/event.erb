<h1><%= @event.name %></h1>
<h3><%= @event.description %></h3>
<a href="<%= @event.id %>/suggestion/new"><button>Create new suggestion</button></a>
<ul>
    <form method="post" action="/event/<%= @event.id %>/submitsuggestions">
        <input type="text" name="username"></input>
        <input type="submit" value="Submit answers"></input>
        <% @timesugs.each do |ts| %>
            <%= erb :timesuggestion, :layout => false, :locals => { :timesuggestion => ts } %>
        <% end %>
    </form>
</ul>
