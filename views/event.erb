<h1 id="eventname"><%= @event.name %></h1>
<h3 id="eventdesc"><%= @event.description %></h3>
<p><a href="<%= @event.id %>/suggestion/new"><button>Create new suggestion</button></a></p>
<form method="post" action="/event/<%= @event.id %>/submitsuggestions">
    <span id="submitstuff">
        <input type="text" name="username" placeholder="Your name"></input>
        <input type="submit" value="Submit answers"></input>
    </span>
    <ul id="timesuggestions">
        <% @timesugs.each do |ts| %>
            <%= erb :timesuggestion, :layout => false, :locals => { :timesuggestion => ts } %>
        <% end %>
        <% session[:opencomments] = "" %>
    </ul>
</form>
